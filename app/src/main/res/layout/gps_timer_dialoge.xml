<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:layout_centerVertical="true">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutFromTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtFromTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:hint="From Time"
                android:focusable="false"
                android:textSize="@dimen/_15sdp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutToTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayoutFromTime">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtToTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:hint="To Time"
                android:focusable="false"
                android:drawablePadding="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayoutToTime"
            android:text="Submit"
            android:id="@+id/btnTimerSubmit"
            android:textColor="@color/white"
            android:background="@color/btnbgcolor"/>

    </RelativeLayout>

</RelativeLayout>