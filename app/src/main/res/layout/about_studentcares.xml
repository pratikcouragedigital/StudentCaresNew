<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/contactUsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For Support you can call or email us."
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp">

                <TextView
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/lblMobileNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact No: " />

                <TextView
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/txtMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/lblMobileNo"
                    android:text="8976560004"
                    android:textColor="@color/dividerLine" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp">

                <TextView
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/lblEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: " />

                <TextView
                    android:padding="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/lblEmail"
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="developers.studentcares@gmail.com"
                    android:textColor="@color/dividerLine" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp">

                <TextView
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/lblUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web Login URL: " />

                <TextView
                    android:padding="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/lblUrl"
                    android:id="@+id/txtUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="developers.studentcares@gmail.com"
                    android:textColor="@color/dividerLine" />
            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGreen500"/>
        </LinearLayout>


        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:layout_below="@+id/contactUsLayout"
            android:id="@+id/paragraph1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="fill_horizontal"
            android:padding="@dimen/_5sdp"
            android:text="Studentcares is a exclusive Information &amp; Communication Technology for Student &amp; Staff Attendance Management. It makes easier E-Interaction between Teacher &amp; Parents. It helps to Schools &amp; Colleges for tracking their student's as well as staff attendance information. It is complete solution, for school &amp; colleges which would help to monitoring student timely attendance."
            android:textSize="@dimen/_16sdp" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/paragraph2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paragraph1"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:text="Studentcares, a Student Attendance Solutions Company, is the biometric industry's leading independent integration and consulting firm, providing a broad range of biometric services and solutions. Since 2000 we have provided business and technical expertise in applications ranging from network security and transaction systems to access control and large-scale identification. Our clients include government agencies, leading financial institutions, Schools , Colleges, high-tech firms, and numerous Fortune 500 corporations."
            android:textSize="@dimen/_16sdp" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/paragraph3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paragraph2"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:text="We are committed to providing to our clients"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/paragraph4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paragraph3"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:text="State-of-Art technology solutions, insightful and reliable analysis of the biometric industry."
            android:textSize="@dimen/_16sdp" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/paragraph5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paragraph4"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:text="High Performance Biometric Finger Indetification technology accurately identifies and authenticates users."
            android:textSize="@dimen/_16sdp" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/paragraph6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paragraph5"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:text="Highest Security to ensure the safety and steadfast Protection of valuable information."
            android:textSize="@dimen/_16sdp" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/paragraph7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paragraph6"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:text="Accurate &amp; Categorywise Managed Reports."
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>
</ScrollView>